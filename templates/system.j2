config system
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'
	option hostname '{{inventory_hostname}}.bkp.santafe.gov.ar'
	option zonename 'America/Argentina/Cordoba'
	option timezone '<-03>3'
	option log_proto 'udp'
	option conloglevel '8'
	option cronloglevel '8'

config timeserver 'ntp'
	option enabled '1'
	list server 'time.santafe.gov.ar'
